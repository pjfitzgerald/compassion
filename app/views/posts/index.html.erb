<style>

  .post-index-container {
    display: flex;
    flex-direction: column;
    justify-content: center;      
  }

  .post-index-container h2 {
    padding: 20px;
    padding-bottom: 0px;     
  }

  .post-index-container h4 {
    padding: 20px;
    padding-bottom: 0px;     
  }


  .new-post-container {
    margin: 20px;
  }
  .journal-container-index {
    width: 100%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    background: #F4F4F4;
    padding: 50px;
    padding-left: 80px;

    /*margin-top: 100px;*/
  }

  .latest-journal-entries-card-index {
    margin-left: 70px;
    margin-right: 0px;
    margin-top:;
    margin-bottom: 20px;
    padding: 20px;
    width: 75%;
    box-shadow: 1px 1px 1px 1px gray;
    border-radius: 12px;
    background-color: #F4F4F4;
    /*background: radial-gradient(#9fd4a0, #7db37f);*/
    display: flex;
    flex-direction: column;
    /*justify-content: center;*/
    max-width: 650px;
  }

  .latest-journal-entries-index {
    width: 100%;
    border-bottom: solid 1px #ddd;
  }


  .latest-journal-entries-date-index {
    color: black;
    font-weight: bold;
    margin-top: 2.5px;
    margin-bottom: 0px;
    border-bottom: solid 1px #ddd;
  }

  .latest-journal-entries-text-index {
    color: #333;
    margin-top: 10px;
    width: 100%;
  }

  .button-secondary-journal-index {
  width: 100%;
  height: 40px;
  background: #D29393;
  color: white;
  border-radius: 10px;
  outline: none;
  border: none;
  transition: background .25s;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button-new-post {
  width: 50%;
  height: 40px;
  background: gray;
  color: white;
  border-radius: 10px;
  outline: none;
  border: none;
  transition: background .25s;
  display: flex;
  justify-content: center;
  align-items: center;
}

