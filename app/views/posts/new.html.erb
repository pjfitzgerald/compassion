<style>

  .journal-container-show {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    background: #F7F7F7;
    padding: 50px;
    padding-left: 80px;

    /*margin-top: 100px;*/
  }

</style>

 
<div class="container d-flex justify-content-between">
  <%= render "shared/sidebar" %>
  <h2>Create a new journal post!</h2>
  <%= simple_form_for [@journal, @post] do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.submit "Save this post!", class: "btn btn-primary" %>
  <% end %>
</div>