<style>


</style>

<div class="profile-container">
  <h1 class="profile-title">Choose your profile</h1>
  <div class="profile-button-abort">
    <% if current_user.profiles.last.present? %>
      <%= link_to user_path(current_user) do %>
        <button class="button-close">
          <i class="fas fa-plus"></i>
        </button>
      <% end %>
    <% end %>
  </div>
  <div class="profile-body">
    <div class="profile-image">
      <% imageName = @profile.animal %>
      <%= image_tag("avatars/#{imageName.downcase}.png") %>
    </div>
    <div class="profile-text">
      <h3><%= @profile.adjective.capitalize %> <%= @profile.animal %></h3>
      <div class="profile-quote">
        <i class="fas fa-quote-left"></i>
        <p><em><%= @profile.description.capitalize %></em></p>
      </div>
    </div>
    <div class="profile-buttons">
      <%= simple_form_for @user do |f| %>
      <%= f.hidden_field :profileanimal, value: @profile.animal %>
      <%= f.hidden_field :profileadj, value: @profile.adjective %>
      <%= f.hidden_field :profiledesc, value: @profile.description %>
      <%= f.hidden_field :profileimg, value: "avatars/#{@profile.animal.downcase}" %>
      <%= f.submit :submit, value: "continue", class: "button-default-transparent" %>
      <% end %>
      <%= link_to do %>
      <button class="button-secondary">Refresh</button>
      <% end %>
    </div>
  </div>
</div>




