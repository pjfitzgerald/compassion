<div class="login-container">
  <img src="https://res.cloudinary.com/db3hrutzq/image/upload/v1563898761/Compassion%20images/Rhino_cn0xve.png" alt="n/a">
  <div class="close-button-container">
    <%= link_to root_path do %>
    <button class="button-close" style="color: white;">
      <i class="fas fa-arrow-left" style="transform: rotate(-45deg);"></i>
    </button>
    <% end %>
  </div>
  <div class="login-form">
    <h2>Compassion</h2>
    <br><br>
    <p>Please Login to your account</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
                    <br>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <br>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "button-primary" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
  <div class="copyright-tag">
    <i class="far fa-copyright"> 2019 Compassion. All rights reserved.</i>
  </div>
</div>
