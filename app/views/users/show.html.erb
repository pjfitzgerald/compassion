<style>

  /* —————————————————————————————————
  —————————— DASHBOARD BODY ——————————
  ———————————————————————————————————— */

  .dashboard-body {
    position: relative;
    margin-left: 108px;
    width: auto;
    overflow: auto;
    z-index: 1;
    transition: .5s;
  }

  /* —————————————————————————————————
  —————————————— TOPBAR ——————————————
  ———————————————————————————————————— */

  .topbar {
    width: 100%;
    height: 125px;
    text-align: center;
    background: white;
    box-shadow: 0px 2px 3px rgba(0,0,0,.1);
    overflow: hidden;
  }

  .topbar h1 {
    color: #222;
    padding-top: 20px;
    font-weight: 700;
  }

  .topbar-info {
    display: flex;
    justify-content: space-around;
    flex-flow: row wrap;
    align-items: center;
    margin-left: 30px;
  }

  .topbar-info p {
    margin-top: 10px;
    color: #222;
  }


</style>

<script></script>

<div class="dashboard-container">

  <!-- SIDEBAR: app/views/users/_sidebar.html.erb -->
  <%= render "sidebar" %>

  <!-- BODY -->
  <div class="dashboard-body">

    <!-- TOPBAR: app/views/users/topbar.html.erb -->
    <%= render "topbar" %>

    <!-- QUESTION-HEADER: app/views/users/questionbox.html.erb -->
    <%= render "questionbox" %>

