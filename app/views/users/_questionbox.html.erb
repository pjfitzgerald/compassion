<div class="question-header-container">

  <div class="question-box">
    <div class="question-box-icons">
      <div class="icon-back">
        <% if @user.d_answer_one != "" && @user.d_answer_two != "" && @user.d_answer_three != "" %>
          <%= link_to user_path(@user) do %>
            <%= simple_form_for @user do |f| %>
              <%= f.hidden_field :daily_reset, value: "reset" %>
              <%= f.button :button do %>
                <i class="far fa-arrow-alt-circle-left"></i>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="icon-info">
        <i class="fas fa-info-circle" data-toggle="modal" data-target="#modal-info"></i>
      </div>
    </div>
    <h1>
      <% if @user.d_answer_one.empty? %>
        <h3>Question 1/3</h3> <%= @questions[0] %>
      <% elsif @user.d_answer_two.empty? && @user.d_answer_one != "" %>
        <h3>Question 2/3</h3> <%= @questions[1] %>
      <% elsif @user.d_answer_three.empty? && @user.d_answer_two != "" %>
        <h3>Question 3/3</h3> <%= @questions[2] %>
      <% else %>
         <h3>Daily Questions Answered ðŸ˜ƒ</h3>
      <% end %>
    </h1>
      <%= simple_form_for @user, input_html: { id: "dashboard-input" } do |f| %>
        <% if @user.d_answer_one == "" %>
          <%= f.input :d_answer_one, label: false %>
          <i class="fas fa-caret-right"></i>
        <% elsif @user.d_answer_two == "" && @user.d_answer_one != "" %>
          <%= f.input :d_answer_two, label: false %>
        <% elsif @user.d_answer_three == "" && @user.d_answer_two != "" %>
          <%= f.input :d_answer_three, label: false %>
        <% else %>
          <%= link_to "Start a new Chat", new_chat_path(id: current_user.id) %>
        <% end %>
      <% end %>
  </div>
</div>
