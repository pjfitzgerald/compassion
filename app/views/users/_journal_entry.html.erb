<div class="latest-journal-entries">
  <h5><%= post.title %></h5>
  <div class="underline"></div>
  <p class="latest-journal-entries-date"><%= post.created_at.strftime("%x %-I:%M %p") %></p>
  <p class="latest-journal-entries-text"><%= post.content.truncate(30) %></p>
  <%= link_to journal_post_path(post.journal, post.id) do %>
    <button class="button-secondary">Read</button>
  <% end %>
  <%= link_to journal_post_path(post.journal, post.id), data: { confirm: 'Are you sure?' } method: :delete do %>
    <button class="button-secondary">Delete</button>
  <% end %>
</div>
