<div class="latest-journal-entries">
  <h5><%= post.title.truncate(30) %></h5>
  <div class="underline"></div>
  <p class="latest-journal-entries-date"><%= post.created_at.strftime("%x %-I:%M %p") %></p>
  <p class="latest-journal-entries-text"><%= post.content.truncate(30) %></p>
  <div style="display: flex;">
    <%= link_to journal_post_path(post.journal, post.id) do %>
      <button class="button-default-transparent" style="margin-right: 1vw">Read</button>
    <% end %>
    <button class="button-secondary" style="margin-right: 1vw" data-toggle="modal" data-target="#modal-delete">
      Delete
    </button>
  </div>
</div>
